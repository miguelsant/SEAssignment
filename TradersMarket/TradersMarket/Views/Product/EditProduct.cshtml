@model TradersMarket.Models.UpdateProductModel

@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Product</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>




@using (Html.BeginForm("editProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Html.LabelFor(model => model.prodName)</legend>

        <div class="editor-field">
            <img src="@Html.DisplayFor(model => model.ImageURL)" alt="" height='145px' width='145px'/>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.prodName)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.prodName)
            @Html.ValidationMessageFor(model => model.prodName)
        </div>


        <div class="editor-label">
            @Html.Label("Category")
        </div>

         <div class="editor-field">
           @Html.DropDownList("CategoryDDL",Model.ListCategory)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.prodDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.prodDescription)
            @Html.ValidationMessageFor(model => model.prodDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>

        <div class="editor-field">
          <input type="file" name="file" id="file" />
        </div>

        <p>
            <input type="submit" value="Save" /> 
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Delete", "DeleteSelectedProduct", new { id = Model.prodID }, "Product")
</div>