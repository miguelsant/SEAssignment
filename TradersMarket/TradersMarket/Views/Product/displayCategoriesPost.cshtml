

@model TradersMarket.Models.DisplayProductsModel
@{
    ViewBag.Title = "displayCategoriesPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>

@foreach (Common.Product prod in Model.listProducts)
{

    <div class = "OuterContainer">
    <div class="ImageContainer"><img src="@Html.DisplayFor(modelItem => prod.ProductImage)" alt="" height='145px' width='145px'/></div>
    <div class="ProdNameContainer">@Html.ActionLink(prod.ProductName, "ProductDetailsShow", "Product", new { id = prod.ProductID }, "Product")</div>
    <div class="ProdQuantityContainer">Qty: @Html.DisplayFor(modelItem => prod.Quantity)</div>
    <div class="PriceContainer">€ @Html.DisplayFor(modelItem => prod.Price)</div>
    <div class="DescriptionProd">@Html.DisplayFor(modelItem => prod.ProductDescription)</div>
    </div>
    
    
    <br />
}
<div style="clear:both"></div>
